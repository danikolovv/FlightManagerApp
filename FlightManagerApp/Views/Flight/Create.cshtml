@model FlightManagerApp.Models.Flight

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="margin-p-nav">Create Flight</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <h4>Flight Details</h4>
                    <hr id="light-hr" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FlightFrom" class="control-label"></label>
                        <input asp-for="FlightFrom" class="form-control" />
                        <span asp-validation-for="FlightFrom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FlightTo" class="control-label"></label>
                        <input asp-for="FlightTo" class="form-control" />
                        <span asp-validation-for="FlightTo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TakeOffTime" class="control-label"></label>
                        <input asp-for="TakeOffTime" class="form-control" />
                        <span asp-validation-for="TakeOffTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LandingTime" class="control-label"></label>
                        <input asp-for="LandingTime" class="form-control" />
                        <span asp-validation-for="LandingTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaneType" class="control-label"></label>
                        <input asp-for="PlaneType" class="form-control" />
                        <span asp-validation-for="PlaneType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaneNumber" class="control-label"></label>
                        <input asp-for="PlaneNumber" class="form-control" />
                        <span asp-validation-for="PlaneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>Additional Details</h4>
                    <hr id="light-hr" />
                    <div class="form-group">
                        <label asp-for="PilotName" class="control-label"></label>
                        <input asp-for="PilotName" class="form-control" />
                        <span asp-validation-for="PilotName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaneCapacity" class="control-label"></label>
                        <input asp-for="PlaneCapacity" class="form-control" />
                        <span asp-validation-for="PlaneCapacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaneBusinessClassCapacity" class="control-label"></label>
                        <input asp-for="PlaneBusinessClassCapacity" class="form-control" />
                        <span asp-validation-for="PlaneBusinessClassCapacity" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-5">
                    <input id="btns-create-admin" type="submit" value="Create Flight" class="btn btn-primary" />
                    <a id="btns-create-admin" class="btn btn-secondary view-list" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
